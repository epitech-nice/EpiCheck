FROM node:22-alpine

# Install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate


# Install system dependencies for Expo and React Native
RUN apk add --no-cache \
    git \
    bash \
    curl \
    openssh \
    python3 \
    make \
    g++

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install all dependencies (including dev dependencies for build)
RUN pnpm install --frozen-lockfile

# Install missing peer dependencies explicitly
RUN pnpm install react-native-worklets --legacy-peer-deps || true

# Install Expo CLI globally
RUN npm install -g expo-cli @expo/ngrok

# Copy the rest of the application
COPY . .

# Expose Expo default ports
# 19000 - Expo DevTools
# 19001 - Expo DevTools (websocket)
# 19002 - Expo Metro Bundler
# 8081 - React Native packager
EXPOSE 19000 19001 19002 8081

# Set environment to development
ENV NODE_ENV=development

# Start Expo in development mode
CMD ["npm", "start"]
